<h2>Edit <%= resource_name.to_s.humanize %></h2>

<div class="form-horizontal">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <p>
    <%= f.label :email, class: 'control-label col-sm-2' %>
    <%= f.email_field :email, autofocus: true %>
    </p>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <p>
    <%= f.label :password, class: 'control-label col-sm-2' %>
    <%= f.password_field :password, autocomplete: "off" %>
    <i>(leave blank if you don't want to change it)</i>
    </p>

    <p>
    <%= f.label :password_confirmation, class: 'control-label col-sm-2' %>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </p>

    <p>
    <%= f.label :user_name, class: 'control-label col-sm-2' %>
		<%= f.text_field :user_name, autofocus: true %>
    </p>

    <p>
    <%= f.label :name, class: 'control-label col-sm-2' %>
		<%= f.text_field :name, autofocus: true%>
		</p>

		<p>
		<%= f.label :surname, class: 'control-label col-sm-2' %>
		<%= f.text_field :surname, autofocus: true %>
		</p>

		<p>
		<%= f.label :company_name, class: 'control-label col-sm-2' %>
		<%= f.text_field :company_name, autofocus: true %>		
		</p>

		<p>
		<%= f.label :role, class: 'control-label col-sm-2' %>
		<%= f.text_field :role, autofocus: true %>
		</p>
		
    <p>
    <%= f.label :current_password, class: 'control-label col-sm-2' %>
    <%= f.password_field :current_password, autocomplete: "off" %>
    <i>(we need your current password to confirm your changes)</i>
    </p>

    <div class="actions">
    <%= f.submit "Update", class: 'btn btn-primary col-sm-offset-2 col-sm-1' %>
    </div>
  <% end %>
</div>


<!--<h3>Cancel my account</h3>-->

<p>
<%= link_to "Cancel my account", registration_path(resource_name), class: 'btn btn-link', data: { confirm: "Are you sure?" }, method: :delete %>
<%= button_to "Back", :back, class: 'btn btn-link col-sm-offset-2' %>
</p>

