<h2>Sign up</h2>

<div class="form-horizontal">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    
		<p>
		<%= f.label "Username *", class: 'control-label col-sm-2' %>
		<%= f.text_field :user_name, autofocus: true %>
		</p>
		
		<p>
		<%= f.label "Email *", class: 'control-label col-sm-2' %>
		<%= f.email_field :email, autofocus: true %>
		</p>

        <p>
        <%= f.label :name, class: 'control-label col-sm-2' %>
		<%= f.text_field :name, autofocus: true%>
		</p>

		<p>
		<%= f.label :surname, class: 'control-label col-sm-2' %>
		<%= f.text_field :surname, autofocus: true %>
		</p>

		<p>
		<%= f.label :company_name, class: 'control-label col-sm-2' %>
		<%= f.text_field :company_name, autofocus: true %>		
		</p>

		<p>
		<%= f.label :role, class: 'control-label col-sm-2' %>
		<%= f.text_field :role, autofocus: true %>
		</p>
  
      <br>

        <p>
        <%= f.label "Password *", class: 'control-label col-sm-2' %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "off" %>
        </p>

        <p>
        <%= f.label "Password confirmation *", class: 'control-label col-sm-2' %>
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </p>

        <div class="actions">
        <%= f.submit "Sign up", class: 'btn btn-primary col-sm-offset-2 col-sm-1' %>
        <%= link_to "or simply Log in :)", new_user_session_path, class: 'btn btn-link' %>
        </div>
    
    
  <% end %>
</div>
<% #render "devise/shared/links" %>
