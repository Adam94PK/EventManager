<h1 id="header1" class="col-sm-offset-1">Log in</h1>

<div class = "form-horizontal">
	<%= form_for :session, url: login_path do |f| %>

		<p>
		<%= f.label :user_name, class: 'control-label col-sm-2' %>
		<%= f.text_field :user_name %>
		</p>

		<p>
		<%= f.label :password, class: 'control-label col-sm-2' %>
		<%= f.password_field :pasword %>
		</p>

		<p>
		<%= f.submit "Log in", class: 'btn btn-primary col-sm-offset-2 col-sm-1' %>
		</p>

	<% end %>
</div>