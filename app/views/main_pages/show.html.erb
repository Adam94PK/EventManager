<h1 id="header1">
	<%= @main_page.header %>
</h1>

<div class="main_page_content">
	<div class="col-md-offset-1">
		<div>
			<%= image_tag @main_page.jumbotron.url(:medium) %>
		</div>
		<div>
			<strong>Description:</strong></br>
			<%= @main_page.content %>
		</div>
	</div>


	<% if current_user == find_event.user %>
		<div id="ifuserloggedin">
			<p>
				<%= link_to "Edit", edit_event_main_page_path, class: "btn-link-red"%>
				or
				<%= link_to "Delete", event_main_page_path, method: :delete, class: "btn-link-red" %>
			</p>
		</div>
	<% end %>
</div>
