<h1>Events#show</h1>
<p>Find me in app/views/events/show.html.erb</p>
<% if current_user.present? %>
	<% if current_user.id == @event.user_id %>
		<% if @event.main_page.present? %>
			<p>
				<%= link_to "Show main page", event_main_page_path(@event, @event.main_page) %>
			</p>
		<% else %>
			<p>
				<%= link_to "Create main page", new_event_main_page_path(@event) %>
			</p>
		<% end %>
		<p>
			<%= link_to "Usun", event_path(@event), method: :delete %>
		</p>
	<% end %>
<% end %>
